{
  "compilerOptions": {
    "target": "ES2018",           
    "module": "ES6",                                
    "sourceMap": true,                                
    "resolveJsonModule": true,                            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                               
    "moduleResolution": "node"
  }
}
