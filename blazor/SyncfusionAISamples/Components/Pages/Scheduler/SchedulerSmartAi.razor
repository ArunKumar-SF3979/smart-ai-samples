    }

    .smart-button {
        visibility: hidden;
    } 
   .e-toast-container .e-toast {
        background-color: #6aff67d6;
        border: 1px solid #04ff00;
    }

    .e-data-form .e-button-right {
        margin-bottom: 16px !important;
    }

</style>
